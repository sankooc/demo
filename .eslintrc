{
    parser: "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "modules": true,
            "blockBindings": true
        }

    },
    "env": {
        "es6": true,
        "browser": true,
        "mocha": true,
        "node": true
    },
    "extends": "eslint:recommended",

    "ecmaFeatures": {
        "jsx": true,
        "modules": true,
        "blockBindings": true,
        "experimentalObjectRestSpread": true
    },

    "rules": {
        "no-console": 0,
        "semi": 0,
        "indent": 1
    },

    "globals": {
        "React": true
    },

    "plugins": ["react"],

    "settings": {
        "react": {
            "pragma": "React",
            "version": "15.0"
        }
    }
}
